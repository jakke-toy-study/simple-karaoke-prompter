{
    "compilerOptions": {
      "jsx": "react-jsx",
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "noImplicitAny": false,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["src/*"],
        "mainArea/*": ["src/mainArea/*"]
      },
      "esModuleInterop": true,
    },
    "include": ["src/**/*.ts", "src/main.ts", "src/renderer.ts", "src/rendererArea/components/lyricsPrompter.tsx", "src/rendererArea/components/wipeText.tsx"],
    "exclude": ["node_modules"]
  }